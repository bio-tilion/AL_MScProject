\vspace{2cm}
{\Large\@author\unskip\strut\par}
\vspace{3cm}
{
    \settowidth{\bbk}{\large\textbf{Birkbeck, University of London}}
    \parbox{2cm}{\includegraphics[width=2cm]{bbk.png}}
    \parbox{\bbk}{
        {\large\textbf{Birkbeck, University of London}}\par
        School of Natural Sciences\par\smallskip

        {\large MSc Bioinformatics, 2022-2023}
    }\par
}
\vfill
\raggedright\large
{
    Supervised by\par\medskip
    \@supervisorList
    % \@supervisor\unskip\strut\par
}
\vspace{2.5cm}

% {\large \@date\par}
\end{titlepage}
}
