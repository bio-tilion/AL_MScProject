\newcommand*{\supervisor}[3]{%
  \ifdefined\@supervisorList
    \g@addto@macro\@supervisorList{\protect\supervisoritem{#1}{#2}{#3}}% Store each pair as a sub-list
  \else
    \newcommand\@supervisorList{\protect\supervisoritem{#1}{#2}{#3}}% Initialize with the first pair
  \fi
}

\newcommand{\supervisoritem}[3]{%
  {\textbf{#1}}\par
  position: #2\par
  email: #3\par\medskip
}

